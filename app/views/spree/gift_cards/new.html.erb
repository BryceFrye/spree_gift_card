<div id="gift_cards">
  <h1><%= Spree.t(:gift_card) %></h1>
  <%= render "spree/shared/error_messages", :target => @gift_card %>
  <%= form_for @gift_card do |f| %>
    <div class="input-dropdown-wrap slim-aligned">
      <%= f.label :variant_id, Spree.t(:value) %>
      <span class="required">*</span><br/>
      <%= f.select :variant_id, @gift_card_variants.map { |variant| [variant.display_price, variant.id] } %>
    </div>
    <div class="input-text-wrap slim-aligned">
      <%= f.label :name, Spree.t("recipient_name") %>
      <span class="required">*</span><br/>
      <%= f.text_field :name %>
    </div>
    <div class="input-text-wrap slim-aligned">
      <%= f.label :email, Spree.t("recipient_email") %>
      <%= f.text_field :email %>
    </div>
    <div class="input-text-wrap slim-aligned">
      <%= f.label :note, Spree.t("note") %><br/>
      <%= f.text_area :note, :rows => 10 %>
    </div>
    <%= f.submit Spree.t(:add_to_cart), :class => 'medium bg-disabled cta', :id=>"cta-submit"  %>
  <% end %>
</div>